<% provide(:title, 'Post create') %>

<div class = "post_submit_home">
<h1>投稿画面です</h1>
<%= form_tag("/posts/create") do %>
 
  <div class = "error_message">
   <% @post.errors.full_messages.each do |message| %>
    <%= message %>
    <% end %>
  </div>

    <div class = "post_title">
    <h2>Title</h2>
    
      <input class ="post_new_title" type="text" name="title" value="<%= @post.title %>">
    
 </div>
 <div class = "post_content">
    <h2>Contents</h2>
    
      <textarea class = "post_new_content" name="content"><%= @post.content %></textarea>
    
 </div>
  <input type="submit">
  <%end%>
</div>
    
