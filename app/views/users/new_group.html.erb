<% provide(:title, 'Group create') %>

<div>
      <h1>user signup</h1>
       <%= form_tag("/users/#{@user.id}/team/create") do %>

      <% unless @team.errors.full_messages.empty? %>
       <div class = "error_message">
         <% @team.errors.full_messages.each do |message| %>
         <%= message %>
         <% end %>
       </div>
       <% end %>
       
        <h2>group name</h2>
          <div class="cp_iptxt">
           <input type="text" name="name" value="<%= @group.team_name %>">
           <i class="fa fas fa-user-friends" aria-hidden="true"></i>
         </div>

        <h2>guest name</h2>
          <div class="cp_iptxt">
           <input type="text" name="guest">
           <i class="fa fad fa-user-plus" aria-hidden="true"></i>
         </div>

         

         <input type="submit">
        <% end %>

    </div>
   